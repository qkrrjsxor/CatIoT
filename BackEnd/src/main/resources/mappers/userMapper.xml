<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.ciot.model.dao.UserDao">

	<!-- 회원 등록 -->
	<insert id="insertUser" parameterType="User">
		INSERT INTO user(user_id, password, user_name)
		VALUES(#{userId}, #{password}, #{userName})
	</insert>
	
	<!-- 고양이 등록 -->
    <insert id="insertCat" parameterType="Cat">
        INSERT INTO cat(user_id, cat_name, cat_age, cat_gender)
        VALUES(#{userId}, #{catName}, #{catAge}, #{catGender})
    </insert>

	<!-- 로그인 -->
	<select id="selectUser" parameterType="String" resultType="User">
		SELECT * FROM user
		WHERE user_id = #{userId}
	</select>

</mapper>
